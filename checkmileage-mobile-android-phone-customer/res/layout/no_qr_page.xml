<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/design_bg_register_qr" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:background="@drawable/design_btn_register_qr"
            android:ems="10"
            android:padding="10dp"
            android:text="@string/no_qr_create"
            android:textColor="@android:color/white"
            android:textSize="20dp" >
        </Button>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:background="@drawable/design_btn_register_qr"
            android:ems="10"
            android:padding="10dp"
            android:text="@string/no_qr_scan"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:background="@drawable/design_btn_register_qr"
            android:ems="10"
            android:padding="10dp"
            android:text="@string/get_qr_by_phone_num"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>